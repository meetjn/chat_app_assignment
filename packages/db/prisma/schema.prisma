generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int        @id @default(autoincrement())
  username         String     @unique
  password         String
  messages         Message[]  @relation("UserMessages")
  studentChatRooms ChatRoom[] @relation("StudentChatRooms")
  expertChatRooms  ChatRoom[] @relation("ExpertChatRooms")
}

model ChatRoom {
  id        Int       @id @default(autoincrement())
  studentId Int
  expertId  Int
  student   User      @relation("StudentChatRooms", fields: [studentId], references: [id])
  expert    User      @relation("ExpertChatRooms", fields: [expertId], references: [id])
  messages  Message[]
}

model Message {
  id         Int      @id @default(autoincrement())
  content    String
  timestamp  DateTime @default(now())
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  chatRoomId Int
  senderId   Int
  sender     User     @relation("UserMessages", fields: [senderId], references: [id])
}
